{
  "name": "dataunion-onchain-contracts",
  "version": "0.0.1",
  "description": "Smart contracts for Data Union with onchain accounting",
  "scripts": {
    "clean": "rm -rf build/ && mkdir -p build/contracts",
    "build": "truffle compile && ./flatten",
    "deploy": "truffle migrate",
    "lint": "eslint . && solhint contracts/**/*.sol",
    "lint-temporary": "eslint . && echo skipping smart contract linting for now",
    "unit-test": "truffle test test/contracts",
    "integration-test": "mocha test/e2e --exit",
    "test": "npm run unit-test && npm run integration-test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@openzeppelin/upgrades": "^2.8.0",
    "debug": "4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "5.14.1",
    "openzeppelin-solidity": "^3.0.0",
    "solhint": "^3.1.0",
    "truffle": "^5.1.23",
    "truffle-flattener": "^1.4.3",
    "web3": "^1.2.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "ethers": "^4.0.47"
  }
}
