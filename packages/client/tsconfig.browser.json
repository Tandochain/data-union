{
    "extends": "@dataunions/dev-config/ts/tsconfig.browser.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictBindCallApply": true,
        "baseUrl": ".",
        "paths": {
            "stream": [
                "readable-stream"
            ],
            "util": [
                "util"
            ],
            "http": [
                "./src/shim/http-https.js"
            ],
            "@ethersproject/wordlists": [
                "@ethersproject/wordlists/lib.esm/browser-wordlists.js"
            ],
            "https": [
                "./src/shim/http-https.js"
            ],
            "crypto": [
                "crypto-browserify"
            ],
            "buffer": [
                "buffer/"
            ],
            "node-fetch": [
                "./src/shim/node-fetch.ts"
            ]
        }
    },
    "include": [
        "package.json",
        "src/**/*",
        "src/**/*.json",
        "vendor/**/*",
        "contracts/**/*.json",
        "src/config.schema.json"
    ],
    "exclude": [
        "src/index-esm.mjs"
    ]
}
